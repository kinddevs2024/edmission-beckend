# Server
NODE_ENV=development
PORT=4000
# HOST: адрес для прослушивания (0.0.0.0 — все интерфейсы, для проверки здоровья снаружи)
HOST=0.0.0.0

# Database (MongoDB)
MONGODB_URI=mongodb://localhost:27017/edmission

# JWT
JWT_SECRET=your-super-secret-key-change-in-production
JWT_REFRESH_SECRET=your-refresh-secret-key
JWT_ACCESS_TTL=15m
JWT_REFRESH_TTL=7d

# CORS (comma-separated origins). Добавь http://localhost:8080 при работе через Nginx.
CORS_ORIGIN=http://localhost:5173,http://localhost:3000,http://localhost:8080

# Ollama / AI
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=deepseek-llm:7b
AI_CHAT_RATE_LIMIT_PER_MINUTE=10
AI_CHAT_TIMEOUT_MS=60000

# Email (optional for verify/reset)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
EMAIL_FROM=noreply@edmission.local

# Uploads (local path or S3)
UPLOAD_DIR=./uploads
